{
	"name": "folder-scopes",
	"publisher": "bartosz-dude",
	"displayName": "Folder Scopes",
	"description": "Allows to scope folders to only show their content",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.90.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "folder-scopes.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "folder-scopes.selectScope",
				"title": "Select Scope",
				"category": "Folder Scopes"
			},
			{
				"command": "folder-scopes.createScope",
				"title": "Create Scope",
				"category": "Folder Scopes"
			},
			{
				"command": "folder-scopes.deleteScope",
				"title": "Delete Scope",
				"category": "Folder Scopes"
			},
			{
				"command": "folder-scopes.scopeFolder",
				"title": "Scope Folder",
				"category": "Folder Scopes"
			},
			{
				"command": "folder-scopes.hideFile",
				"title": "Hide File",
				"category": "Folder Scopes"
			},
			{
				"command": "folder-scopes.hideFolder",
				"title": "Hide Folder",
				"category": "Folder Scopes"
			},
			{
				"command": "folder-scopes.unscope",
				"title": "Unscope",
				"category": "Folder Scopes"
			},
			{
				"command": "folder-scopes.revealFiles",
				"title": "Reveal Hidden Files",
				"category": "Folder Scopes"
			},
			{
				"command": "folder-scopes.renameScope",
				"title": "Rename Scope",
				"category": "Folder Scopes"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "folder-scopes.scopeFolder",
					"when": "explorerResourceIsFolder && resourcePath not in excludedPaths",
					"group": "Folder Scopes"
				},
				{
					"command": "folder-scopes.hideFolder",
					"when": "explorerResourceIsFolder && resourcePath not in excludedPaths",
					"group": "Folder Scopes"
				},
				{
					"command": "folder-scopes.hideFile",
					"when": "!explorerResourceIsFolder",
					"group": "Folder Scopes"
				}
			],
			"commandPalette": [
				{
					"command": "folder-scopes.scopeFolder",
					"when": "false"
				},
				{
					"command": "folder-scopes.hideFolder",
					"when": "false"
				},
				{
					"command": "folder-scopes.hideFile",
					"when": "false"
				}
			]
		},
		"configuration": {
			"title": "Folder Scopes",
			"properties": {
				"folder-scopes.scopes": {
					"default": {},
					"description": "Defined scopes",
					"type": "object",
					"additionalProperties": {
						"type": "object",
						"description": "Scope name",
						"additionalProperties": {
							"type": "object",
							"description": "Workspace folder name",
							"properties": {
								"folderPath": {
									"type": "string",
									"description": "Path starting from the workspace folder"
								},
								"excludedFilePaths": {
									"type": "array",
									"items": {
										"type": "string",
										"description": "Path starting from the workspace folder"
									}
								}
							},
							"additionalProperties": false
						}
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run check-types && npm run lint && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.90.0",
		"@types/mocha": "^10.0.6",
		"@types/node": "18.x",
		"@typescript-eslint/eslint-plugin": "^7.11.0",
		"@typescript-eslint/parser": "^7.11.0",
		"eslint": "^8.57.0",
		"esbuild": "^0.21.4",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.4.5",
		"@vscode/test-cli": "^0.0.9",
		"@vscode/test-electron": "^2.4.0"
	}
}
